<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D5EFF4"> <androidx.appcompat.widget.Toolbar
    android:id="@+id/toolbarChiTietDonHang"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="#D5EFF4"
    app:titleTextColor="#FFFFFF"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    app:title="Chi Tiết Đơn Hàng" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@android:color/white"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textViewOrderID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mã đơn hàng: #0"
                        android:textSize="20sp"
                        android:textColor="#601d1b"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"/>

                    <View
                        android:layout_width="50dp"
                        android:layout_height="2dp"
                        android:background="#601d1b"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/textViewTenKhachHang"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Khách hàng: ..."
                        android:textColor="#555555"
                        android:textSize="16sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Danh sách sản phẩm"
                android:textColor="#601d1b"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"/>

            <ListView
                android:id="@+id/listViewChiTietDonHang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:divider="#E0E0E0"
                android:dividerHeight="1dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:background="#601d1b"
                android:alpha="0.3"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:orientation="horizontal"
                android:gravity="end"> <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tổng thanh toán: "
                android:textColor="#333333"
                android:textSize="18sp"/>

                <TextView
                    android:id="@+id/textViewTongTienCuoi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 Đ"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#601d1b" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>