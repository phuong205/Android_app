<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D5EFF4">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/buttonQuayLai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\u2190 Quay lại"
            android:textColor="#000000"
            android:textSize="18sp"
            android:background="@android:color/transparent"
            android:paddingStart="0dp"
            android:paddingEnd="16dp"
            android:layout_marginBottom="16dp"
            android:minWidth="0dp"
            style="@style/Widget.AppCompat.Button.Borderless"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">

            <ImageView
                android:id="@+id/imageViewChitietSanpham"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_weight="1.5"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:background="#F5F5F5"
                android:paddingEnd="16dp"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:paddingStart="16dp">

                <TextView
                    android:id="@+id/textViewTensp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tên sản phẩm"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginTop="0dp" />

                <TextView
                    android:id="@+id/textViewGiasp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Giá"
                    android:textColor="#B71C1C"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="24dp" />

                <Button
                    android:id="@+id/buttonThemGioHang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thêm vào giỏ hàng"
                    android:textSize="18sp"
                    android:textColor="@android:color/white"
                    android:backgroundTint="#4CAF50"
                    android:padding="20dp"
                    android:layout_marginTop="0dp" />

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/textViewMotasp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mô tả sản phẩm"
            android:textSize="16sp"
            android:lineSpacingExtra="4dp"
            android:layout_marginTop="8dp" />

    </LinearLayout>
</ScrollView>