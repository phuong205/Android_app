<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/imageViewGioHang"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:layout_marginEnd="10dp"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/textViewTenGioHang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/imageViewGioHang"
        android:text="Tên Sản Phẩm Giỏ Hàng"
        android:textSize="16sp"
        android:textStyle="bold"
        android:maxLines="2"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/textViewGiaGioHang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewTenGioHang"
        android:layout_toEndOf="@id/imageViewGioHang"
        android:text="Giá: 0 Đ"
        android:textColor="#C62828"
        android:textSize="14sp"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/textViewTongTungMon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewGiaGioHang"
        android:layout_toEndOf="@id/imageViewGioHang"
        android:text="Tổng: 0 Đ"
        android:textColor="#000000"
        android:textSize="14sp"
        android:layout_marginTop="4dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/textViewTongTungMon"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/buttonGiam"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="-"
            android:textSize="18sp"
            android:padding="0dp"
            android:backgroundTint="#FF0000"/>

        <TextView
            android:id="@+id/textViewSoLuong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"/>

        <Button
            android:id="@+id/buttonTang"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="+"
            android:textSize="18sp"
            android:padding="0dp"
            android:backgroundTint="#4CAF50"/>
    </LinearLayout>

</RelativeLayout>